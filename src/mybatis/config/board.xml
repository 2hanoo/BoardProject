<struts>
	<package name="board" namespace="/board" extends="struts-default">
	
	
		<!-- 게시판 리스트 액션 -->
		<action name="list" class="mybatisBoard.action.ListAction">
			<result name="success">boardList.jsp</result>
		</action>

		
		<!-- 게시판 글 쓰기 액션 1. 글쓰기 폼 불러오기 -->
